		{
			"name": "Listar Usuarios Cadastrados",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"pm.test(\"response must be valid and have a body\", function () {\r",
							"    pm.response.to.be.ok;\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"pm.variables.set (\"schema\",\r",
							"    {\r",
							"        \"type\": \"object\",\r",
							"        \"required\": [\r",
							"            \"quantidade\",\r",
							"            \"usuarios\"\r",
							"        ],\r",
							"        \"properties\": {\r",
							"            \"quantidade\": {\r",
							"                \"type\": \"integer\",\r",
							"            },\r",
							"            \"usuarios\": {\r",
							"                \"type\": \"array\",\r",
							"                \"items\": {\r",
							"                    \"type\": \"object\",\r",
							"                    \"required\": [\r",
							"                        \"nome\",\r",
							"                        \"email\",\r",
							"                        \"password\",\r",
							"                        \"administrador\",\r",
							"                        \"_id\"\r",
							"                    ],\r",
							"                    \"properties\": {\r",
							"                        \"nome\":{\"type\": \"string\"},\r",
							"                        \"email\":{\"type\": \"string\"},\r",
							"                        \"password\":{\"type\": \"string\"},\r",
							"                        \"administrador\":{\"type\": \"string\"},\r",
							"                        \"_id\":{\"type\": \"string\"},\r",
							"                    }\r",
							"                }\r",
							"            }\r",
							"        },\r",
							"    }\r",
							")\r",
							"pm.test(\"must return a response with valid Schema\", function () {\r",
							"    var jsonData = pm.response.json(); \r",
							"    var schema = pm.variables.get(\"schema\"); \r",
							"    var isSchemaValid = tv4.validate(jsonData, schema);\r",
							"    if(!isSchemaValid)\r",
							"        console.error(tv4.error);\r",
							"    pm.expect(tv4.validate(jsonData, schema)).to.be.true;\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
